<?xml version='1.0' encoding='utf-8'?>
<widget id="com.barnsonic.stere" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>stere</name>
    <description>
        Application de conversion stère/mètre cube
    </description>
    <author email="seba.caillaud@gmail.com" href="http://barnsonic.com">
        Sébastien Caillaud
    </author>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="permissions" value="none"/>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="http://creativecommons.org/*" />
    <allow-navigation href="http://fr.wikipedia.org/*" />
    <allow-navigation href="http://barnsonic.com/*" />
    <!-- Allow links to web pages to open in a browser -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <gap:plugin name="org.li8.inappbrowser" version="0.1" />

<feature name="InAppBrowser">
    <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
<param name="ios-package" value="CDVInAppBrowser" />
</feature>

    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="icon.png" />
</widget>
