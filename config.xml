<?xml version='1.0' encoding='utf-8'?>
<widget id="com.barnsonic.stere" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>stere</name>
    <description>
        Application de conversion stère/mètre cube
    </description>
    <author email="seba.caillaud@gmail.com" href="http://barnsonic.com">
        Sébastien Caillaud
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-navigation href="http://creativecommons.org/*" />
    <allow-navigation href="http://fr.wikipedia.org/*" />
    <allow-navigation href="http://barnsonic.com/*" />
    <!-- Allow links to web pages to open in a browser -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <gap:plugin name="org.apache.cordova.inappbrowser" source="pgb" version="0.6.0" />
    <gap:plugin name="org.apache.cordova.splashscreen" />
<!-- <preference name="SplashScreenDelay" value="5000" /> -->
    <preference name="SplashScreen" value="splash" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="permissions" value="none"/>
    <preference name="orientation" value="portrait" />
    <icon src="icon.png" />
<!-- <gap:splash src="splash.png" /> -->
</widget>
